@model MvcSorunBildirim.Models.Cevaplar

@{
    ViewBag.Title = "CevapEdit";
}

<style>
    body {
        background-color: #f0f0f0;
        font-family: Arial, sans-serif;
    }

    .form-horizontal {
        margin: 0 auto;
        width: 50%;
        padding: 20px;
    }

    .form-group {
        margin-bottom: 15px;
        border: 1px solid #ddd;
        box-shadow: 0 1px 2px #eee;
        background-color: #fff;
    }

    .control-label {
        text-align: left;
        width: 20%;
        padding-top: 5px;
    }

    .col-md-10 {
        padding-left: 15px;
    }

    input[type="submit"] {
        background-color: #00a0d2;
        color: white;
        padding: 5px 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
    }

    a {
        color: #00a0d2;
        text-decoration: none;
    }
</style>

<h2 style="color:#333">Cevap Yaz</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Cevap_Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Cevap_Metni, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cevap_Metni, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cevap_Metni, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("<-Önceki Sayfaya Dön", "Index", new { @class = "link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" })
</div>