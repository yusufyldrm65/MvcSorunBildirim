@model MvcSorunBildirim.Models.Basvuru

@{
    ViewBag.Title = "Details";
}
<style>
    body {
        background-color: #f0f0f0;
        font-family: Arial, sans-serif;
    }

    .form-horizontal {
        margin: 0 auto;
        width: 50%;
        padding: 20px;
    }

    .form-group {
        margin-bottom: 15px;
        border: 1px solid #ddd;
        box-shadow: 0 1px 2px #eee;
        background-color: #fff;
    }

    .control-label {
        text-align: left;
        width: 20%;
        padding-top: 5px;
    }

    .col-md-10 {
        padding-left: 15px;
    }

    input[type="submit"] {
        background-color: #00a0d2;
        color: white;
        padding: 5px 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
    }

    a {
        color: #00a0d2;
        text-decoration: none;
    }
</style>
<h2>Basvuru Detayları</h2>

<div>

    <hr />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Özellik</th>
                <th>Değer</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Başvuru AD-Soyad</td>
                <td>@Html.DisplayFor(model => model.AdSoyad)</td>
            </tr>
            <tr>
                <td>Başvuru Tel</td>
                <td>@Html.DisplayFor(model => model.Telefon)</td>
            </tr>
            <tr>
                <td>Basvuru Email</td>
                <td>@Html.DisplayFor(model => model.Email)</td>
            </tr>
            <tr>
                <td>Basvuru Sikayet</td>
                <td>@Html.DisplayFor(model => model.Sikayet)</td>
            </tr>
            <tr>
                <td>Basvuru Konu</td>
                <td>@Html.DisplayFor(model => model.Konu)</td>
            </tr>
            <tr>
                <td>Basvuru Adres</td>
                <td>@Html.DisplayFor(model => model.Adres)</td>
            </tr>
            <tr>
                <td>Basvuru Enlem</td>
                <td>@Html.DisplayFor(model => model.Enlem)</td>
            </tr>
            <tr>
                <td>Basvuru Boylam</td>
                <td>@Html.DisplayFor(model => model.Boylam)</td>
            </tr>
            <tr>
                <td>Basvuru Durum</td>
                <td>@Html.DisplayFor(model => model.Basvuru_Durumu)</td>
            </tr>
            <tr>
                <td>Basvuru Kurum</td>
                <td>@Html.DisplayFor(model => model.Kurum.Kurum_Adi)</td>
            </tr>


        </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("<-Önceki Sayfaya Dön", "Index")
</p>