@model IEnumerable<MvcSorunBildirim.Models.Basvuru>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>AdminLTE 3 Gösterge Paneli</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.1.0/css/adminlte.min.css" rel="stylesheet">

    <style>
        .table th, td {
            padding: 5px;
            text-align: center;
            vertical-align: middle;
        }

        .btn-group {
            margin-top: 10px;
        }
    </style>
</head>

<body class="hold-transition sidebar-mini layout-fixed">

    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="#" class="brand-link">
            <img src="https://adminlte.io/themes/v3/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
            <span class="brand-text font-weight-light">AdminLTE 3</span>
        </a>

        <div class="sidebar">
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a href="#" class="nav-link active">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                Ana Sayfa/Şikayet Listesi
                            </p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-cubes"></i>
                            <p>Hakkında</p>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </aside>

    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <h1 class="mt-0">Şikayetler</h1>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Ad-Soyad</th>
                        <th>Kurum Adı</th>
                        <th>Basvuru Durumu</th>
                        <th>Telefon</th>
                        <th>Email</th>
                        <th>Konu</th>
                        <th>Adres</th>
                        <th>İşlemler</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AdSoyad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Kurum.Kurum_Adi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Basvuru_Durumu)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefon)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Konu)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Adres)
                            </td>

                            <td>
                                <div class="d-flex justify-content-between">
                                    @Html.ActionLink("Şikayete Cevap yaz", "CevapEdit", new { id = item.Basvuru_Id }, new { @class = "btn btn-success btn-sm" })
                                    @Html.ActionLink("Şikayetin Durumunu güncelle", "DurumEdit", new { id = item.Basvuru_Id }, new { @class = "btn btn-warning btn-sm" })
                                    @Html.ActionLink("Şikayetin Detayını gör", "Details", new { id = item.Basvuru_Id }, new { @class = "btn btn-info btn-sm" })
                                    @Html.ActionLink("Şikayeti Sil", "Delete", new { id = item.Basvuru_Id }, new { @class = "btn btn-danger btn-sm" })


                                </div>
                            </td>
                        </tr>
                    }
                    <div class="btn-group">
                        <button type="button" class="btn btn-success btn-sm" data-toggle="tooltip" title="Şikayete Cevap Yaz">
                            <i class="fas fa-reply"></i>
                        </button>
                        <button type="button" class="btn btn-warning btn-sm" data-toggle="tooltip" title="Şikayetin Durumunu Güncelle">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button type="button" class="btn btn-info btn-sm" data-toggle="tooltip" title="Şikayetin Detayını Gör">
                            <i class="fas fa-info"></i>
                        </button>
                        <button type="button" class="btn btn-danger btn-sm" data-toggle="tooltip" title="Şikayeti Sil">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>



                </tbody>
            </table>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0iJTxDzO0rT7abK41JStQIAqVgRVzpbzo5smXKp" crossorigin="anonymous"></script>
</body>
</html>