
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .gradient-custom {
        /* fallback for old browsers */
        background: #6a11cb;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
    }
</style>

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Giriş Paneli</h2>
                            @*<p class="text-white-50 mb-5">Please enter your login and password!</p>*@
                            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                            {

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" for="typeEmailX">Email Adresiniz</label>
                                <input type="email" id="typeEmailX" name="UserMail" placeholder="Lütfen Email adresinizi giriniz.." class="form-control" />

                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" for="typePasswordX">Şifre</label>
                                <input type="password" id="typePasswordX" name="password" placeholder="Şifrenizi giriniz." class="form-control" />

                            </div>

                            <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Şifreni mi Unuttun?</a></p>

                            <button class="btn btn-outline-light btn-lg px-5" type="submit">Giriş Yap</button>

                            }
                        </div>
                    

                        <div>
                            <p class="mb-0">
                                Hesabınız Yok mu? <a href="#!" class="text-white-50 fw-bold"> Kayıt Ol</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>